<p id="notice"><%= notice %></p>

<h1>Beers</h1>

<p>travis <%= Bar.new.name %></p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Brewery</th>
      <th>Integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.brewery_id %></td>
        <td><%= beer.integer %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

